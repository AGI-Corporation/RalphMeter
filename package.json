{
  "name": "ralphmeter",
  "version": "0.1.0",
  "description": "Metering, transparency, and benchmarking layer for AI coding agents. The physical unit for AI code synthesis.",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "ralphmeter": "dist/cli/index.js"
  },
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "test": "vitest",
    "test:run": "vitest run",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "start": "node dist/index.js"
  },
  "keywords": [
    "ai",
    "coding-agent",
    "metrics",
    "transparency",
    "ralph",
    "loc",
    "benchmark"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "better-sqlite3": "^12.6.2",
    "commander": "^14.0.2",
    "cors": "^2.8.5",
    "express": "^5.0.1",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@eslint/js": "^9.19.0",
    "@types/better-sqlite3": "^7.6.12",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/node": "^25.1.0",
    "@types/supertest": "^6.0.2",
    "eslint": "^9.19.0",
    "prettier": "^3.4.2",
    "supertest": "^7.1.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.22.0",
    "vitest": "^4.0.18"
  }
}
